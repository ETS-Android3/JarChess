<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".match.activity.MatchActivity"
    tools:showIn="@layout/activity_match">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|fill_vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/pausePendingTitleTextView_Paused"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:padding="15dp"
            android:scrollHorizontally="false"
            android:text="Paused"
            android:textAppearance="@style/CustomDialogTitle"
            android:visibility="gone" />


        <TextView
            android:id="@+id/pausePendingTitleTextView_ResumeRequestPending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:padding="15dp"
            android:scrollHorizontally="false"
            android:text="Resume Request Pending"
            android:textAppearance="@style/CustomDialogTitle" />


        <TextView
            android:id="@+id/pausePendingTitleTextView_PauseRequestPending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:padding="15dp"
            android:scrollHorizontally="false"
            android:text="Pause Request Pending"
            android:textAppearance="@style/CustomDialogTitle"
            android:visibility="gone" />


        <TextView
            android:id="@+id/pausePendingTitleTextView_Resume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:padding="15dp"
            android:scrollHorizontally="false"
            android:text="Resume"
            android:textAppearance="@style/CustomDialogTitle"
            android:visibility="gone" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|fill_vertical"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/pausePendingProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            tools:visibility="gone" />

        <Button
            android:id="@+id/pausePendingButton"
            style="@style/customButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resume" />
    </TableRow>

</TableLayout>